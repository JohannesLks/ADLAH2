# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Agent configuration
AGENT_LOG_LEVEL=INFO
MODEL_SAVE_INTERVAL=3600
LOG_SOURCE=es

# RL Agent hyperparameters
# Start with high exploration (epsilon=0.9 means 90% random, 10% learned)
RL_EPSILON=0.9
# Gradually reduce exploration over time
RL_EPSILON_DECAY=0.995
# Minimum epsilon to ensure some exploration
RL_EPSILON_MIN=0.1

# Learning parameters
RL_LR=0.001
RL_GAMMA=0.95
RL_BATCH_SIZE=32

# Model architecture
LSTM_UNITS=64
DENSE_UNITS=64

# System parameters
HONEYPOD_TTL_SEC=1800
IP_COOLDOWN_SEC=60

# Enable deployment mode (set to 0 to allow both wait and deploy)
FORCE_DEPLOY_ONLY=0